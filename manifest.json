{
  "name": "Lottie Assets Extractor",
  "description": "Extract Lottie animation asset links from lottiefiles.com",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "storage",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "*://lottiefiles.com/*",
    "*://app.lottiefiles.com/*",
    "*://assets-v2.lottiefiles.com/*",
    "*://assets.lottiefiles.com/*",
    "*://assets1.lottiefiles.com/*",
    "*://assets2.lottiefiles.com/*",
    "*://assets3.lottiefiles.com/*",
    "*://assets4.lottiefiles.com/*",
    "*://assets5.lottiefiles.com/*",
    "*://assets6.lottiefiles.com/*",
    "*://assets7.lottiefiles.com/*",
    "*://assets8.lottiefiles.com/*",
    "*://assets9.lottiefiles.com/*",
    "*://lottie.host/*"
  ],
  "action": {
    "default_title": "Open Lottie Assets Manager",
    "default_icon": {
      "16": "hello_extensions.png",
      "32": "hello_extensions.png",
      "48": "hello_extensions.png",
      "128": "hello_extensions.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://lottiefiles.com/*",
        "*://app.lottiefiles.com/*",
        "*://lottie.host/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "hello_extensions.png",
    "48": "hello_extensions.png",
    "128": "hello_extensions.png"
  }
}
